# Crear el archivo kubeconfig
mkdir -p ~/.kube
touch ~/.kube/config

# Configurar el contexto de Kubernetes para Minikube
kubectl config set-cluster minikube --server=https://192.168.49.2:8443 --certificate-authority=/root/.minikube/ca.crt
kubectl config set-credentials minikube --token=yQsx7xdb1zYz1u60TFy5wC67amn7zGOg
kubectl config set-context minikube --cluster=minikube --user=minikube --namespace=lab-mafe-ci-cd
kubectl config use-context minikube
